pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/jimtz/weather.git'
            }
        }

     stage('Static Analysis') {
                steps {
                    script {
                        if (isUnix()) {
                            sh 'docker run sonarsource/sonar-scanner-cli'
                        } else {
                            bat 'docker run sonarsource/sonar-scanner-cli'
                        }
                    }
                }
     }

        stage('Dynamic Analysis') {
            steps {
                script {
                    docker.image('instrumentisto/nmap').inside {
                        sh 'nmap -v -A target-ip'
                    }
                }
                script {
                    docker.image('paoloo/sqlmap').inside {
                        sh 'sqlmap -u target-url --batch'
                    }
                }
            }
        }

        stage('Docker Security Check') {
            steps {
                script {
                    docker.image('aquasec/trivy:latest').inside {
                        sh 'trivy image your-docker-image'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying Application...'
            }
        }
    }
}
