pipeline {
    agent any

    environment {
        // Ρύθμιση του Docker host
        DOCKER_HOST = 'tcp://localhost:2375'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/jimtz/weather.git'
            }
        }

        stage('Static Analysis') {
            steps {
                script {
                    sh 'docker run --rm -e SONAR_HOST_URL=https://sonarcloud.io:9000 -v ${WORKSPACE}:/usr/src sonarsource/sonar-scanner-cli'
                }
                script {
                    sh 'docker run --rm -v ${WORKSPACE}:/data trufflesecurity/trufflehog:latest trufflehog file:///data'
                }
            }
        }

        stage('Dynamic Analysis') {
            steps {
                script {
                    // Εκτέλεση Nmap scan
                    sh 'docker run --rm instrumentisto/nmap -v -A 172.17.0.2'
                }
                script {
                    // Εκτέλεση SQLMap
                    sh 'docker run --rm paoloo/sqlmap sqlmap -u http://localhost:8080 --batch'
                }
            }
        }

        stage('Docker Security Check') {
            steps {
                script {
                    // Έλεγχος εικόνας Docker με Trivy
                    sh 'docker run --rm aquasec/trivy:latest image jenkins/jenkins:lts'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Προσθέστε τα βήματα για το deployment της εφαρμογής σας
                    echo 'Deploying Application...'
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
        }
    }
}
