pipeline {
    agent any

    environment {
        DOCKER_HOST = 'tcp://localhost:2375'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/jimtz/weather.git'
            }
        }

        stage('Static Analysis') {
            steps {
                script {

                    sh 'docker run --rm -e SONAR_HOST_URL=http://http://internal-server-name:9000 -v ${WORKSPACE}:/usr/src sonarsource/sonar-scanner-cli'
                }
                script {

                    sh 'docker run --rm -v ${WORKSPACE}:/data trufflesecurity/trufflehog:latest trufflehog file:///data'
                }
            }
        }

        stage('Dynamic Analysis') {
            steps {
                script {
                    sh 'docker run --rm instrumentisto/nmap -v -A 127.0.0.1'
                }
                script {
                    // Εκτέλεση SQLMap, αντικαταστήστε `target-url` με την URL που θέλετε να ελέγξετε
                    sh 'docker run --rm paoloo/sqlmap sqlmap -u target-url --batch'
                }
            }
        }

        stage('Docker Security Check') {
            steps {
                script {
                    // Έλεγχος εικόνας Docker με Trivy, αντικαταστήστε `your-docker-image` με την εικόνα προς έλεγχο
                    sh 'docker run --rm aquasec/trivy:latest image sha256:7fef0d6ded53ed2c0bb64b8e07763090d7ae8cb509b12c3eb5d4bef89a02a704'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Προσθέστε τα βήματα για το deployment της εφαρμογής σας
                    echo 'Deploying Application...'
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
        }
    }
}
