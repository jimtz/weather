pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/jimtz/weather.git'
            }
        }

        stage('Static Analysis') {
            steps {
                script {
                    docker.image('sonarsource/sonar-scanner-cli').inside {
                        sh 'sonar-scanner'
                    }
                }
                script {
                    docker.image('trufflesecurity/trufflehog:latest').inside {
                        sh 'trufflehog https://github.com/jimtz/weather.git'
                    }
                }
            }
        }

        stage('Dynamic Analysis') {
            steps {
                script {
                    docker.image('instrumentisto/nmap').inside {
                        sh 'nmap -v -A target-ip'
                    }
                }
                script {
                    docker.image('paoloo/sqlmap').inside {
                        sh 'sqlmap -u target-url --batch'
                    }
                }
            }
        }

        stage('Docker Security Check') {
            steps {
                script {
                    docker.image('aquasec/trivy:latest').inside {
                        sh 'trivy image your-docker-image'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying Application...'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
        }
    }
}
